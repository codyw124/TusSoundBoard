<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button android:id="@+id/bro_oh_my_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bro_oh_my_word" />
            <Button android:id="@+id/nah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nah" />

            <Button android:id="@+id/nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nothing" />
            <Button android:id="@+id/oh_my_gosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oh_my_gosh" />
            <Button android:id="@+id/oh_my_gosh_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oh_my_gosh_man" />
            <Button
                android:id="@+id/oh_my_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oh_my_word"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>